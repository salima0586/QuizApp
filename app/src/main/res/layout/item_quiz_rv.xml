<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81sp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="81sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#1A051D"
        android:textSize="22sp"
        android:text="what is the largest city and commercial capital of sri lanka"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_questions"
        android:layout_marginStart="50dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Colombo"
        android:background="@drawable/bg_btn_rounded"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_first"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Colombo"
        android:background="@drawable/bg_btn_second"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_second"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Colombo"
        android:background="@drawable/bg_btn_third"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_third"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Colombo"
        android:background="@drawable/bg_btn_four"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_four"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="@string/skip"
        android:background="@drawable/bg_btn_skip"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>